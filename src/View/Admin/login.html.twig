{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminMembers.css">
{% endblock %}


{% block content %}

	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-8 ">
				<h1 class="formTitle text-danger text-center fs-1 mt-5">CONNECTION</h1>
				{% for error in errors %}
					<div class="alert alert-danger text-center" role="alert">
							{{ error }}
					</div>
				{% endfor %}
				<div class="container my-5">
					<div class="row d-flex justify-content-center">
						<div class="col-lg-5 ">
							<form action="" method="POST">
								<div class="mb-3">
									<label for="exampleInputEmail1" class="form-label">Identifiant</label>
									<input type="email" class="form-control" name="email" id="exampleInputEmail1" placeholder="adresse@email.fr">
								</div>
								<div class="mb-3">
									<label for="exampleInputPassword1" class="form-label">Mot de passe</label>
									<input type="password" class="form-control" name="password" id="exampleInputPassword1">
								</div>
								<button type="submit" class="btn btn-danger">Se connecter</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascript %}{% endblock %}
