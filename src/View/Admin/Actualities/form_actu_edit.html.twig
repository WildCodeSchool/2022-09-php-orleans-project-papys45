{% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block title %}Modifier une information
{% endblock %}

{% block content %}

	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-8 ">
				<h1 class="actu-title text-danger text-center fs-1 mt-5">{{ "modifier une information"|upper }}</h1>
				<ul class="text-center mt-5">
					{% for error in errors %}
						<li class="text-danger">
							{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

	<div class="actu-container mt-2">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-6">

				{% if message == 'success' %}
					<div class="alert alert-success text-center" role="alert">Votre information a bien été modifiée.</div>
				{% endif %}

				<form action="" method="POST" enctype="multipart/form-data">
					<input type="hidden" value="{{ actuality.id }}" name="id">
					<div class="form-group m-3">
						<label class="formLabel" for="title">Titre de l'information:</label>
						<input type="text" class="form-control" name="title" id="title" placeholder="Modifier le titre ici" value="{{ actuality.title ?? ''}}" required/>
					</div>

					<div class="form-group m-3">
						<label class="formLabel" for="content">Description:</label>
						<textarea class="form-control" name="content" id="content" rows="3" placeholder="Modifier le contenu ici" required>{{ actuality.content ?? '' }}</textarea>
					</div>

					<div class="d-flex align-items-center justify-content-between">
						<button type="submit" class="btn btn-danger m-3" href="/admin/actualites/editer?id={{ actuality.id }}">Modifier</button>
						<a class="actu-btn btn btn-outline-secondary m-3" href="/admin/actualites">Retour</a>
					</div>

				</div>
			</form>
		</div>
	</div>
</div>{% endblock %}
